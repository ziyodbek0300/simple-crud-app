{
  "compilerOptions": {
    "strict": true,
    "allowJs": true,
    "sourceMap": true,
    "rootDir": "./src",
    "outDir": "./dist",
    "target": "ESNext",
    "module": "NodeNext",
    "skipLibCheck": true,
    "noImplicitAny": true,
    "removeComments": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "forceConsistentCasingInFileNames": true
  },
  "include": [
    "src",
    "tests"
  ],
  "exclude": [
    "node_modules",
    "coverage"
  ],
  "ts-node": {
    "esm": true
  }
}
